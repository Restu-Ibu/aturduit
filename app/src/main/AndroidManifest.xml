<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restuibu.aturduit"
    android:versionCode="22"
    android:versionName="1.1" >


    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.restuibu.aturduit.MyApplication"
        android:configChanges="locale|orientation"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeNew" >

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6657666130252014~6383051675"/>

        <activity android:name=".activity.GoogleSignInActivity"></activity>
        <activity
            android:name="com.restuibu.aturduit.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.restuibu.aturduit.activity.HistoryAndStatisticBudgetActivity"
            android:label="@string/title_activity_history_and_statistic_budget"
            android:parentActivityName="com.restuibu.aturduit.activity.MainActivity"
            android:screenOrientation="landscape" >
        </activity>

        <receiver android:name="com.restuibu.aturduit.MyWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <activity
            android:name="com.restuibu.aturduit.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.restuibu.aturduit.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.restuibu.aturduit.activity.MainActivity" >
        </activity>

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>